{
  "manifest_version": 3,
  "name": "Claudey AI Vision - Browser Intelligence",
  "version": "1.0.0",
  "description": "AI-powered visual analysis and memory system for your browsing experience",
  
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "offscreen",
    "activeTab",
    "tabCapture"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claudey AI Vision",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.css",
        "memory-timeline.html",
        "memory-timeline.js",
        "settings.html",
        "settings.js",
        "agents/text-browsing-agent.js",
        "agents/vision-agent.js",
        "agents/orchestrator-agent.js",
        "agents/semantic-tensor-memory.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}